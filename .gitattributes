# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix line endings for text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.txt text eol=lf

# Force Windows line endings for batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Package files
*.tgz binary
*.tar.gz binary

# Lock files
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Environment files
.env* text eol=lf

# Documentation
*.md text eol=lf
docs/** text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
vite.config.* text eol=lf
tailwind.config.* text eol=lf
postcss.config.* text eol=lf
eslint.config.* text eol=lf
tsconfig*.json text eol=lf

# SQL files
*.sql text eol=lf

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
